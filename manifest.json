{
  "name": "Amazon Price Tracker",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Track prices of products on Amazon",
  "permissions": [
    "activeTab",
    "https://www.amazon.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  }
}
